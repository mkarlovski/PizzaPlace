@page   
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<style>
    .card{
        margin-top: 20px;
    }
</style>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" >
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" style="width:100%; height:500px;" !important  >
            <div class="carousel-item active">
                <img class="d-block w-100" src="https://www.pizza-bugs-fun.com/images/stories/pizza.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://im1.dineout.co.in/images/uploads/restaurant/sharpen/5/j/l/p53936-15526488305c8b8a7eb210f.jpg?tr=tr:n-xlarge" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://media-cdn.tripadvisor.com/media/photo-s/18/1a/d5/1e/casteloes.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="container" style="background-color: #dadada; text-align:center; margin-top:20px; padding:20px;">
        <h2>Special Offers</h2>

        @foreach(var offer in Model.Offers)
        {
    <div class="card text-center">
        <div class="card-body">
            <h5 class="card-title">@offer.Title</h5>
            <p class="card-text">@offer.Description</p>
            <p class="card-text">@offer.Price</p>
        </div>
        <div class="card-footer text-muted">
            DateCreated: @offer.DateCreated.ToString("dd MMMM yyyy")
        </div>
    </div>
        }
    </div>

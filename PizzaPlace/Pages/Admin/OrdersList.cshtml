@page  
@model PizzaPlace.OrdersListModel
@{
    ViewData["Title"] = "OrdersList";
}

<h1>OrdersList</h1>


<a asp-page="OrdersList" class="btn btn-primary">All</a>
<a asp-page="OrdersList" asp-page-handler="NotProcessed" class="btn btn-primary">NotProcessed</a>


<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Message</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var order in Model.Orders)
        {
        <tr>
            <td>@order.Name</td>
            <td>@order.Surname</td>
            <td>@order.Address</td>
            <td>@order.Phone</td>
            <td>@order.Message</td>
            @if (order.IsProcessed)
            {
                <td class="text-success">Processed</td>
            }else
            { 
                <td><a asp-page-handler="SetProcessed" asp-route-id="@order.Id" class="btn btn-primary">Process Order</a></td>
            }
        </tr>
        }

    </tbody>
</table>
